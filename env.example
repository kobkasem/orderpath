# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with real secrets!

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/orderpath_development
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_password_here
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Redis Configuration (for Sidekiq)
REDIS_URL=redis://localhost:6379/0

# Robot API Configuration
ROBOT_API_ENDPOINT=http://localhost:8080/api/pick

# Rails Configuration
RAILS_ENV=development
SECRET_KEY_BASE=generate-with-rails-secret-command
RAILS_MAX_THREADS=5

# Port Configuration
PORT=3000

# API Keys (if needed for external services)
# EXTERNAL_API_KEY=your_api_key_here

# Note: Replace all placeholder values with your actual secrets
# Use 'rails secret' to generate SECRET_KEY_BASE

